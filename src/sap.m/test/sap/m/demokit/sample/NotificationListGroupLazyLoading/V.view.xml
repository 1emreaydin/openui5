<mvc:View
		controllerName="sap.m.sample.NotificationListGroupLazyLoading.C"
		class="sapUiBodyBackground sapContrastPlus"
		xmlns:l="sap.ui.layout"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns="sap.m">
	<l:VerticalLayout
			class="sapUiContentPadding"
			width="100%">
		<l:content>
			<List id="notificationList"  class="sapContrast sapContrastPlus">
				<NotificationListGroup
						title="Group with 3 messages from the backend. They will be lazy loaded when 'Expand' button is pressed."
						showCloseButton="true"
						showCounter="false"
						collapsed="true"
						onCollapse="loadNotifications"
						close="onItemClose"
						showEmptyGroup="true"
						enableCollapseButtonWhenEmpty="true">
					<buttons>
						<Button text="Accept All" press="onAcceptPress"/>
						<Button text="Reject All" press="onRejectPress"/>
						<Button text="Get items count" press="onGetItemsCount"/>
					</buttons>
				</NotificationListGroup>
				<NotificationListGroup
						title="Group with 3 messages from the backend. They will be lazy loaded when 'Expand' button is pressed."
						showCloseButton="true"
						showCounter="false"
						collapsed="true"
						onCollapse="loadNotifications"
						close="onItemClose"
						showEmptyGroup="true"
						enableCollapseButtonWhenEmpty="true">
					<buttons>
						<Button text="Accept All" press="onAcceptPress"/>
						<Button text="Reject All" press="onRejectPress"/>
						<Button text="Get items count" press="onGetItemsCount"/>
					</buttons>
				</NotificationListGroup>
			</List>
		</l:content>
	</l:VerticalLayout>
</mvc:View>
