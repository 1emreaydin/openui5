{
	"_version": "1.17.0",
	"sap.app": {
		"id": "card.explorer.format.date",
		"type": "card",
		"title": "Sample of Datasource usage",
		"subTitle": "Sample of Datasource usage",
		"applicationVersion": {
			"version": "1.0.0"
		},
		"shortTitle": "A short title for this Card",
		"info": "Additional information about this Card",
		"description": "A long description for this Card",
		"tags": {
			"keywords": [
				"Action",
				"Card",
				"Sample"
			]
		},
		"dataSources": {
			"purchaseOrders": {
				"uri": "https://services.odata.org/V3/Northwind/Northwind.svc/Orders",
				"type": "OData",
				"settings": {
					"odataVersion": "2.0"
				}
			}
		}
	},
	"sap.card": {
		"type": "List",
		"header": {
			"title": "Order status {= format.dateTime(Date.now(), {pattern: 'H:mm, MMMM d, y'}) }",
			"subTitle": "Orders exceeding 50$ are highlighted as important",
			"icon": {
				"src": "sap-icon://desktop-mobile"
			},
			"status": {
				"text": "5 of 20"
			}
		},
		"content": {
			"data": {
				"request": {
					"url": "{{dataSources.purchaseOrders.uri}}",
					"parameters": {
						"$top": 7
					}
				},
				"path": "/value"
			},
			"item": {
				"title": "{ShipName}",
				"description": "Should arrive {= format.dateTime(${OrderDate}, {relative:true}) }",
				"highlight": "{= ${Price} < 50 ? 'Success' : 'Error'}",
				"info": {
					"value": "{OrderDate}$"
				}
			}
		}
	}
}