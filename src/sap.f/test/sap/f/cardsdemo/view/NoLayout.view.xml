<mvc:View
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.f"
    displayBlock="true">

	<Page title="{i18n>appTitle}">

		<subHeader>
			<Toolbar>
				<ToolbarSpacer/>
				<Title text="No layout provided (inline-block)"/>
				<ToolbarSpacer/>
			</Toolbar>
		</subHeader>

		<content>

			<Panel expandable="true" headerText="Notes">
				<VBox>
					<Text text="There is no layout in this example. Cards wrap when there is not enough space."/>
					<Text text="Every card has fixed width and height specified with a multiplier."/>
					<Text text="A 2x1 card width would be 2*80px and height 1*80px."/>
					<Text text="Margins are added by the cards."/>
					<Text text="Empty spaces between the cards are not handled."/>
					<Text text="No breathing."/>
					<Text text="The app developer / card developer has to ensure the content is not bigger than the card itself"/>
				</VBox>
			</Panel>

			<Panel>
				<f:Card id="somedfault" manifest="{manifests>/noLayout/card1}"/>
				<f:Card id="default1x1" manifest="{manifests>/noLayout/card2}"/>
				<f:Card id="default2x1" manifest="{manifests>/noLayout/card3}"/>
				<f:Card id="default4x1" manifest="{manifests>/noLayout/card4}"/>
				<f:Card id="listCount" manifest="{manifests>/noLayout/card13}"/>
				<f:Card id="default2x2" manifest="{manifests>/noLayout/card5}"/>
				<f:Card id="default4x2" manifest="{manifests>/noLayout/card6}"/>
				<f:Card id="default4x4" manifest="{manifests>/noLayout/card7}"/>
				<f:Card id="default4x4Image" manifest="{manifests>/noLayout/card8}"/>
				<f:Card id="default6x4" manifest="{manifests>/noLayout/card9}"/>
				<f:Card id="default6x4Busy" manifest="{manifests>/noLayout/card10}"/>
				<f:Card id="default2x2Image" manifest="{manifests>/noLayout/card11}"/>
				<f:Card id="card6x6withcomponent" manifest="{manifests>/noLayout/card12}"/>
			</Panel>
		</content>
	</Page>
</mvc:View>