<mvc:View
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.f"
    displayBlock="true">

	<Page title="{i18n>appTitle}">

		<subHeader>
			<Toolbar>
				<ToolbarSpacer/>
				<Title text="No layout provided (inline-block)"/>
				<ToolbarSpacer/>
			</Toolbar>
		</subHeader>

		<content>

			<Panel expandable="true" headerText="Notes">
				<VBox>
					<Text text="There is no layout in this example. Cards wrap when there is not enough space."/>
					<Text text="Every card has fixed width and height specified with a multiplier."/>
					<Text text="A 2x1 card width would be 2*80px and height 1*80px."/>
					<Text text="Margins are added by the cards."/>
					<Text text="Empty spaces between the cards are not handled."/>
					<Text text="No breathing."/>
					<Text text="The app developer / card developer has to ensure the content is not bigger than the card itself"/>
				</VBox>
			</Panel>

			<Panel>
				<f:SAPCard id="card14" manifest="{manifests>/noLayout/card14}"  width="300px" height="200px"/>
				<f:SAPCard id="somedfault" manifest="{manifests>/noLayout/card1}"  width="80px" height="80px"/>
				<f:SAPCard id="default1x1" manifest="{manifests>/noLayout/card2}"  width="80px" height="80px"/>
				<f:SAPCard id="default2x1" manifest="{manifests>/noLayout/card3}"  width="300px" height="200px"/>
				<f:SAPCard id="default4x1" manifest="{manifests>/noLayout/card4}"  width="300px" height="200px"/>
				<f:SAPCard id="listCount" manifest="{manifests>/noLayout/card13}"  width="400px" height="400px"/>
				<f:SAPCard id="default2x2" manifest="{manifests>/noLayout/card5}"  width="300px" height="200px"/>
				<f:SAPCard id="default4x2" manifest="{manifests>/noLayout/card6}"  width="320px" height="160px"/>
				<f:SAPCard id="default4x4" manifest="{manifests>/noLayout/card7}"  width="320px" height="320px"/>
				<f:SAPCard id="default4x4Image" manifest="{manifests>/noLayout/card8}"  width="320px" height="320px"/>
				<f:SAPCard id="default6x4" manifest="{manifests>/noLayout/card9}"  width="480px" height="320px"/>
				<f:SAPCard id="default6x4Busy" manifest="{manifests>/noLayout/card10}"  width="480px" height="320px"/>
				<f:SAPCard id="default2x2Image" manifest="{manifests>/noLayout/card11}"  width="160px" height="160px"/>
				<f:SAPCard id="card6x6withcomponent" manifest="{manifests>/noLayout/card12}"  width="480px" height="480px"/>
				<f:SAPCard id="list" manifest="{manifests>/noLayout/listContent}"  width="400px" height="400px"/>
				<f:SAPCard id="listcard2" manifest="{manifests>/noLayout/listcard2}"  width="400px" height="auto"/>
			</Panel>
		</content>
	</Page>
</mvc:View>