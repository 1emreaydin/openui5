<mvc:View
        xmlns="sap.m"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:w="sap.ui.integration.widgets"
        displayBlock="true">

    <Page title="{i18n>appTitle}">

        <subHeader>
            <Toolbar>
                <ToolbarSpacer/>
                <Title text="Component Content Card [EXPERIMENTAL]"/>
                <ToolbarSpacer/>
            </Toolbar>
        </subHeader>

        <content>
            <Panel>
                <w:Card manifest="./cardcontent/componentContent/separateManifests/cardManifest.json" width="300px" height="300px" class="sapUiTinyMargin"/>
                <w:Card manifest="./cardcontent/componentContent/allInOne/manifest.json" width="300px" height="300px" class="sapUiTinyMargin"/>
            </Panel>
            <Panel>
                <w:Card manifest="./cardcontent/componentContent/booking/cardManifest.json" width="300px" height="230px" class="sapUiTinyMargin"/>
            </Panel>
        </content>
    </Page>
</mvc:View>